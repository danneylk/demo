/*===================
    bannerLiist-css
======================*/

.banner {
    width: 100%;
    height: 410px;
    overflow: hidden;
    position: relative;
}

.banner > ul {
    display: none;
    /*width: 999999999px;*/
    height: 410px;
    position: absolute;
    top:0;
    left: 0;
}

.banner > ul > li  {
    float: left;
    height: 410px;
}

.banner > ul > li > a {
    display: block;
    /*font-size: 200px;*/
    text-align: center;
    height: 410px;
    font-weight: bold;
}
.banner > ul > li > a > img{
	width: 100%;
}
.left-btn,.right-btn {
    width: 15%;
    height: 100%;
    position: absolute;
    top: 0px;
    right: 0px;
    background: url("../img/right-1.png") no-repeat center;
    background-size: 40px;
    cursor: pointer;
    opacity: 0;
    transition: all .5s;
}
.left-btn:hover,.right-btn:hover{
	opacity: 1;
}
.left-btn {
    left: 0px;
    background: url("../img/left-1.png") no-repeat center;
    background-size: 40px;
}

.img-btn-list {
    width: 100%;
    position: absolute;
    bottom: 10px;
    left: 0;
    text-align: center;
}

.img-btn-list > span  {
    display: inline-block;
    width: 15px;
    height: 15px;
    margin: 0 5px;
    border: 2px solid rgba(255,255,255,0.3);
    cursor: pointer;
}

.img-btn-list > span.current {
    border: 2px solid #fff;
}





















