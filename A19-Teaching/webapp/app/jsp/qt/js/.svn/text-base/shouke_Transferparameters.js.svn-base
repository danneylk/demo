
//传递资源id 资源地址 资源index值
$("body").on("click",".swiper-container li",function(){
	var CatalogId=$(this).attr("data-mulu") //内容目录id
	var resourcesId=$(this).attr("id")//资源ID
	var resourcesAddress=$(this).attr("data")//资源地址
	var resourcesIndex=$(this).attr("index")//资源index

//	SendFormMsg("WinMsgKJViewHide", "{\"MsgCode\":0,\"MsgData\":\"\",\"MsgName\":\"WinMsgKJViewHide\",\"Index\":0}");
    alert("【目录ID】"+CatalogId)
	alert("【资源ID】"+resourcesId)
	alert("【资源地址】"+resourcesAddress)
	alert("【资源index】"+resourcesIndex)
	
})



