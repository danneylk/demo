@import 'base';
body {
    background: url(../img/body-bg.png);
}

.top {
    position: relative;
    width: s(320);
    height: s(40);
    text-align: center;
    line-height: s(40);
    font-size: s(14);
    color: colors(white);
    .return {
        position: absolute;
        left: 0;
        top: 0;
        width: s(40);
        height: s(40);
        background: url(../img/return-white.svg) no-repeat center;
        background-size: s(18);
    }
}

.container {
